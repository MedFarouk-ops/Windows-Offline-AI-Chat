<Window x:Class="OfflineCodingBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MFX AI Model Loader"
        Width="1100" Height="750"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI Variable"
        Background="#F3F6F8"
        Icon="Resources/Images/MFXAILoader.png">

    <DockPanel>

        <!-- Bottom bar with your developer credentials -->
        <Border DockPanel.Dock="Bottom" Background="#E0E0E0" Padding="10" BorderThickness="1,0,0,0" BorderBrush="#CCC">
            <TextBlock Text="© 2025 KHABIR Mohamed Farouk- Software Engineer | mohamed.farouk.khabir@gmail.com"
                       FontSize="12" 
                       Foreground="#444"
                       HorizontalAlignment="Center"
                       FontWeight="SemiBold" />
        </Border>

        <!-- Main content fills remaining space -->
        <ContentControl Content="{Binding CurrentPage}" />

    </DockPanel>
</Window>
