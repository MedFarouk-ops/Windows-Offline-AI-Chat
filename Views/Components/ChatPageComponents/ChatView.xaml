<UserControl x:Class="OfflineCodingBot.Views.Components.ChatPageComponents.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:OfflineCodingBot.Converters"
             Background="#F0F4F8">

    <UserControl.Resources>
        <conv:BoolToBrushConverter x:Key="BoolToBrush" 
                                  TrueBrush="#4CAF50"  
                                  FalseBrush="#FFFFFF" />
        <conv:BoolToAlignmentConverter x:Key="BoolToAlign" />

        <conv:MessageToFlowDocumentConverter x:Key="MessageToFlow" />
        
        <LinearGradientBrush x:Key="UserBubbleGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#66BB6A" Offset="0.0"/>
            <GradientStop Color="#388E3C" Offset="1.0"/>
        </LinearGradientBrush>

        <Style TargetType="Border" x:Key="MessageBubbleStyle">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="MaxWidth" Value="500"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#888888" Opacity="0.2" BlurRadius="8" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="{StaticResource UserBubbleGradient}"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#555555" Opacity="0.4" BlurRadius="12" ShadowDepth="4"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" From="0.8" To="1" Duration="0:0:0.5"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" From="0.8" To="1" Duration="0:0:0.5"/>
        </Storyboard>

        <Style TargetType="ContentPresenter" x:Key="MessageItemContainerStyle">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource FadeInStoryboard}"/>
                </EventTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBox" x:Key="ChatMessageTextStyle">
            <Setter Property="FontFamily" Value="{Binding DataContext.ChatFontFamily, Mode=TwoWay}" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        </Style>


        <!-- Simple ComboBox style for polished UI -->
        <Style TargetType="ComboBox" x:Key="ModernComboBox">
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton" Grid.Column="2" Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                          ClickMode="Press"
                                          Background="Transparent"
                                          BorderThickness="0">
                                <Path x:Name="Arrow" Fill="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z"/>
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite" IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="6,2,25,2"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left" />
                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Border Name="DropDownBorder" SnapsToDevicePixels="True" Background="White" BorderBrush="#888" BorderThickness="1">
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Arrow" Property="Fill" Value="#AAA"/>
                                <Setter Property="Foreground" Value="#AAA"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <DockPanel>

        <!-- Settings Bar -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8" HorizontalAlignment="Right" VerticalAlignment="Center"
            Background="white" 
            SnapsToDevicePixels="True" Effect="{DynamicResource DropShadowEffectLight}">

            <StackPanel.Resources>
                <!-- Light drop shadow for Win11 vibe -->
                <DropShadowEffect x:Key="DropShadowEffectLight" Color="#888888" BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>

                <!-- ComboBox style for Win11 -->
                <Style TargetType="ComboBox" x:Key="Win11ComboBox">
                    <Setter Property="MinWidth" Value="140"/>
                    <Setter Property="FontFamily" Value="Segoe UI Variable"/>
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="Foreground" Value="#333"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Padding" Value="6,4"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="#CCC"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBox">
                                <Grid>
                                    <ToggleButton x:Name="ToggleButton" Focusable="False" IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                          ClickMode="Press" Background="Transparent" BorderThickness="0" Padding="0">
                                        <Grid>
                                            <ContentPresenter Margin="6,0,25,0" VerticalAlignment="Center" HorizontalAlignment="Left"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"/>
                                            <Path x:Name="Arrow" Fill="#666" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0" 
                                          Data="M 0 0 L 4 4 L 8 0 Z"/>
                                        </Grid>
                                    </ToggleButton>
                                    <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Fade">
                                        <Border Background="White" BorderBrush="#CCC" BorderThickness="1" CornerRadius="8" Padding="4" SnapsToDevicePixels="True">
                                            <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Arrow" Property="Fill" Value="#AAA"/>
                                        <Setter Property="Foreground" Value="#AAA"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#0078D4"/>
                                        <Setter TargetName="Arrow" Property="Fill" Value="#0078D4"/>
                                    </Trigger>
                                    <Trigger Property="IsDropDownOpen" Value="True">
                                        <Setter Property="BorderBrush" Value="#0078D4"/>
                                        <Setter TargetName="Arrow" Property="Fill" Value="#0078D4"/>
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#005A9E"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <!-- TextBlock style -->
                <Style TargetType="TextBlock" x:Key="Win11Label">
                    <Setter Property="FontFamily" Value="Segoe UI Variable"/>
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Foreground" Value="#222"/>
                    <Setter Property="Margin" Value="0,0,6,0"/>
                </Style>
            </StackPanel.Resources>


            <TextBlock Text="Background:" Style="{StaticResource Win11Label}" Margin="24,0,6,0"/>
            <ComboBox Style="{StaticResource Win11ComboBox}"
          SelectedValue="{Binding ChatBackgroundColorString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
          SelectedValuePath="Tag"
          Width="200"
          IsEditable="False"
          IsTextSearchEnabled="True">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="2">
                            <Rectangle Width="20" Height="14" Stroke="Black" StrokeThickness="0.8" RadiusX="3" RadiusY="3"
                           Fill="{Binding Tag, RelativeSource={RelativeSource AncestorType=ComboBoxItem}, Converter={StaticResource StringToBrushConverter}}" />
                            <TextBlock Text="{Binding Content, RelativeSource={RelativeSource AncestorType=ComboBoxItem}}" 
                           Margin="8,0,0,0" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#222" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>

                <ComboBoxItem Content="White" Tag="White"/>
                <ComboBoxItem Content="Light Gray" Tag="#F0F0F0"/>
                <ComboBoxItem Content="Light Blue" Tag="#DCEEFF"/>
                <ComboBoxItem Content="Light Yellow" Tag="#FFFACD"/>
                <ComboBoxItem Content="Lavender" Tag="#E6E6FA"/>
                <ComboBoxItem Content="Pale Turquoise" Tag="#AFEEEE"/>
                <ComboBoxItem Content="Light Coral" Tag="#F08080"/>
                <ComboBoxItem Content="Salmon" Tag="#FA8072"/>
                <ComboBoxItem Content="Khaki" Tag="#F0E68C"/>
                <ComboBoxItem Content="Peach Puff" Tag="#FFDAB9"/>
                <ComboBoxItem Content="Misty Rose" Tag="#FFE4E1"/>
                <ComboBoxItem Content="Honeydew" Tag="#F0FFF0"/>
                <ComboBoxItem Content="Light Cyan" Tag="#E0FFFF"/>
                <ComboBoxItem Content="Powder Blue" Tag="#B0E0E6"/>
                <ComboBoxItem Content="Thistle" Tag="#D8BFD8"/>
                <ComboBoxItem Content="Wheat" Tag="#F5DEB3"/>
                <ComboBoxItem Content="Light Steel Blue" Tag="#B0C4DE"/>
                <ComboBoxItem Content="Peach" Tag="#FFE5B4"/>
                <ComboBoxItem Content="Pale Goldenrod" Tag="#EEE8AA"/>
                <ComboBoxItem Content="Light Pink" Tag="#FFB6C1"/>
                <ComboBoxItem Content="Blanched Almond" Tag="#FFEBCD"/>
                <ComboBoxItem Content="Alice Blue" Tag="#F0F8FF"/>
                <ComboBoxItem Content="Light Salmon" Tag="#FFA07A"/>
                <ComboBoxItem Content="Cornsilk" Tag="#FFF8DC"/>
            </ComboBox>

        </StackPanel>


        <!-- Chat Area -->
        <Border Background="{Binding ChatBackgroundBrush}" 
                Effect="{DynamicResource DropShadowEffectLight}"
                Padding="16" DockPanel.Dock="Bottom" MinHeight="400" >
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0,12">
                <ItemsControl ItemsSource="{Binding Messages}" ItemContainerStyle="{StaticResource MessageItemContainerStyle}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="6">
                                <Border 
                                Style="{StaticResource MessageBubbleStyle}"
                                HorizontalAlignment="{Binding IsUser, Converter={StaticResource BoolToAlign}}"
                                Background="{Binding IsUser, Converter={StaticResource BoolToBrush}}">

                                    <!-- RichText bubble for mixed text/code -->
                                    <FlowDocumentScrollViewer
                                    Document="{Binding Text, Converter={StaticResource MessageToFlow}}"
                                    VerticalScrollBarVisibility="Hidden"
                                    HorizontalScrollBarVisibility="Hidden"
                                    Background="Transparent"
                                    IsToolBarVisible="False"
                                    Padding="0"
                                    FontSize="16"
                                    FontFamily="{Binding DataContext.ChatFontFamily, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    />
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </ScrollViewer>
        </Border>

    </DockPanel>
</UserControl>
