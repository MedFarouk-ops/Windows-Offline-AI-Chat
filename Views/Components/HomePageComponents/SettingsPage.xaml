<UserControl x:Class="OfflineCodingBot.Views.Components.HomePageComponents.SettingsPage"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300"
             Background="Transparent">

    <Grid Margin="12">
        <Border Background="White" 
                CornerRadius="12" 
                Padding="20">
            <StackPanel>
                <TextBlock Text="Model Parameters" 
               FontWeight="SemiBold" 
               FontSize="20" 
               HorizontalAlignment="Center"
               Foreground="Gray" 
               Margin="0,0,0,24" />

                <!-- Context Size -->
                <StackPanel Margin="0,0,0,18">
                    <TextBlock Text="Context Size" FontWeight="Medium" FontSize="14" Foreground="#333" Margin="0,0,0,6" />
                    <TextBox Text="{Binding ContextSize,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Height="32" Padding="6 4" FontSize="14" BorderBrush="#CCC" BorderThickness="1" Background="#FAFAFA"
                 VerticalContentAlignment="Center" InputScope="Number"
                 ToolTip="The number of tokens the model can see in context. Larger values increase memory but require more resources." />
                </StackPanel>

                <!-- GPU Layer Count -->
                <StackPanel Margin="0,0,0,18">
                    <TextBlock Text="GPU Layer Count" FontWeight="Medium" FontSize="14" Foreground="#333" Margin="0,0,0,6" />
                    <TextBox Text="{Binding GpuLayerCount,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Height="32" Padding="6 4" FontSize="14" BorderBrush="#CCC" BorderThickness="1" Background="#FAFAFA"
                 VerticalContentAlignment="Center" InputScope="Number"
                 ToolTip="Number of layers to offload to GPU. Increase for better performance if GPU memory allows." />
                </StackPanel>

                <!-- Max Tokens -->
                <StackPanel Margin="0,0,0,18">
                    <TextBlock Text="Max Tokens" FontWeight="Medium" FontSize="14" Foreground="#333" Margin="0,0,0,6" />
                    <TextBox Text="{Binding MaxTokens, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Height="32" Padding="6 4" FontSize="14" BorderBrush="#CCC" BorderThickness="1" Background="#FAFAFA"
                 VerticalContentAlignment="Center" InputScope="Number"
                 ToolTip="Maximum number of tokens the model will generate in one response." />
                </StackPanel>

                <!-- Temperature -->
                <StackPanel Margin="0,0,0,18">
                    <TextBlock Text="Temperature" FontWeight="Medium" FontSize="14" Foreground="#333" Margin="0,0,0,6" />
                    <TextBox Text="{Binding Temperature, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Height="32" Padding="6 4" FontSize="14" BorderBrush="#CCC" BorderThickness="1" Background="#FAFAFA"
                 VerticalContentAlignment="Center" InputScope="Number"
                 ToolTip="Controls randomness. Higher values make outputs more creative; lower values make them more deterministic." />
                </StackPanel>

                <!-- Top K -->
                <StackPanel Margin="0,0,0,18">
                    <TextBlock Text="Top K" FontWeight="Medium" FontSize="14" Foreground="#333" Margin="0,0,0,6" />
                    <TextBox Text="{Binding TopK, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Height="32" Padding="6 4" FontSize="14" BorderBrush="#CCC" BorderThickness="1" Background="#FAFAFA"
                 VerticalContentAlignment="Center" InputScope="Number"
                 ToolTip="Limits sampling to the top K most likely tokens. Lower values make output more focused." />
                </StackPanel>

                <!-- Top P -->
                <StackPanel Margin="0,0,0,18">
                    <TextBlock Text="Top P" FontWeight="Medium" FontSize="14" Foreground="#333" Margin="0,0,0,6" />
                    <TextBox Text="{Binding TopP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Height="32" Padding="6 4" FontSize="14" BorderBrush="#CCC" BorderThickness="1" Background="#FAFAFA"
                 VerticalContentAlignment="Center" InputScope="Number"
                 ToolTip="Nucleus sampling probability. Consider only tokens whose cumulative probability is bellow TopP." />
                </StackPanel>

                <!-- Repeat Penalty -->
                <StackPanel Margin="0,0,0,18">
                    <TextBlock Text="Repeat Penalty" FontWeight="Medium" FontSize="14" Foreground="#333" Margin="0,0,0,6" />
                    <TextBox Text="{Binding RepeatPenalty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Height="32" Padding="6 4" FontSize="14" BorderBrush="#CCC" BorderThickness="1" Background="#FAFAFA"
                 VerticalContentAlignment="Center" InputScope="Number"
                 ToolTip="Penalizes repeated tokens. Values >1 discourage repetition in the output." />
                </StackPanel>

                <!-- Frequency Penalty -->
                <StackPanel Margin="0,0,0,18">
                    <TextBlock Text="Frequency Penalty" FontWeight="Medium" FontSize="14" Foreground="#333" Margin="0,0,0,6" />
                    <TextBox Text="{Binding FrequencyPenalty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Height="32" Padding="6 4" FontSize="14" BorderBrush="#CCC" BorderThickness="1" Background="#FAFAFA"
                 VerticalContentAlignment="Center" InputScope="Number"
                 ToolTip="Penalizes frequent tokens. Higher values reduce repeated word usage." />
                </StackPanel>

                <!-- Presence Penalty -->
                <StackPanel Margin="0,0,0,0">
                    <TextBlock Text="Presence Penalty" FontWeight="Medium" FontSize="14" Foreground="#333" Margin="0,0,0,6" />
                    <TextBox Text="{Binding PresencePenalty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Height="32" Padding="6 4" FontSize="14" BorderBrush="#CCC" BorderThickness="1" Background="#FAFAFA"
                 VerticalContentAlignment="Center" InputScope="Number"
                 ToolTip="Encourages new topics. Higher values make the model introduce more novel ideas." />
                </StackPanel>
            </StackPanel>

        </Border>
    </Grid>
</UserControl>

